{
  "name": "legal-chatbot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:network": "next dev --turbopack -H 0.0.0.0",
    "dev:https": "node scripts/dev-https.js",
    "generate-cert": "node scripts/generate-cert.js",
    "setup-mkcert": "node scripts/setup-mkcert.js",
    "cert:quick": "npm run generate-cert && npm run dev:https",
    "dev:clean": "npm run clean && npm run dev",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force .next -ErrorAction SilentlyContinue; Remove-Item -Recurse -Force node_modules/.cache -ErrorAction SilentlyContinue\"",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "setup:backup": "node scripts/setup-backup.js",
    "test:backup": "node scripts/test-backup.js",
    "setup-db": "node scripts/setup-db.js",
    "backup": "node scripts/backup/backup-db.js",
    "docker:build": "docker build -t legal-chatbot .",
    "docker:run": "docker run -p 3000:3000 legal-chatbot"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.4",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.544.0",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "next": "15.5.3",
    "nodemailer": "^7.0.10",
    "openai": "^5.22.0",
    "pdf-parse": "^1.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.22",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "devcert": "^1.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "postcss": "^8.5.6",
    "selfsigned": "^2.4.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
